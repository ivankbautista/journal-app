<h1><%= @category.title %></h1>

<ul>
    <li><%= link_to "Edit", edit_category_path(@category) %></li>
    <li><%= link_to "Remove Entry", category_path(@category),
                    method: :delete,
                    data: { confirm: 'Are you sure with this?' } %></li>
</ul>

<h2>List of Tasks</h2>
    <%= render @category.tasks %>
    <%= link_to "Add a Task to do!", new_category_task_path(@category) %>
    <%= link_to "Back", categories_path(@category) %>