<div class="container mx-auto">
    <div class="bg-white max-w-sm mx-auto rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition duration-500 transform hover:scale-105 cursor-pointer">
    <div class="h-20 bg-blue-500 flex items-center justify-center">
        <% if @task.status == true %>
            <h1 class="text-white ml-4 border-2 py-2 px-4 rounded-full">✔️</h1>
        <% else %>
            <h1 class="text-white ml-4 border-2 py-2 px-4 rounded-full">❌</h1>
        <% end %>
        <span class="mr-20 text-white text-2x1 ml-3 text-center"><%= @task.title %></span>
      </div>

      <p class="py-6 text-lg tracking-wide text-center"><%= @task.details %></p>

      <div class="flex justify-center items-center text-center text-gray-600 bg-white rounded-lg p-2">
        <p class="rounded-1-lg text-center">Deadline at: <%= @task.date.strftime("%B %D, %Y")%></p></br>
      </div>
      <div class="flex justify-center mt-5">
        <p class:"w-full py-2 px-4 rounded-lg bg-indigo-600 text-white hover:bg-green-dark focus:outline-none cursor-pointer"><%= link_to "Back", category_path(@category)%></p>
    </div>
    </div>
</div>