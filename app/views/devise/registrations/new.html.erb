<div class="min-h-screen bg-gray-900 flex flex-col justify-center sm:py-6 text-black">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div
      class="absolute inset-0 bg-gradient-to-r from-indigo-300 to-indigo-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
      </div>
      <div class="relative px-4 py-5 bg-white shadow-lg sm:rounded-3xl sm:p-20">
    <div class="max-w-md mx-auto">
    <div class="text-center mb-3">
					<h1 class="text-2xl font-bold mb-2">📝Task Mate </h1>
          <p>Kindly register below: </p>
		</div>

    <%# form proper %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex">
        <div class="field w-full px-3 mb-5">
          <%= f.label :email, class:"text-x1 font-semibold" %><br />
          <div class="flex">
            <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">📧</div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control w-full -ml-10 pl-10 pr-3 py-1 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500", placeholder:"johndoe@gmail.com" %>
          </div>
        </div>
      </div>

      <div class="flex">
        <div class="field form-group w-full px-3 mb-5">
          <%= f.label :password, class:"text-x1 font-semibold" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <div class="flex">
              <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">🔑</div>
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control w-full -ml-10 pl-10 pr-3 py-1 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500", placeholder:"******" %>
          </div>
        </div>
      </div>

      <div class="flex">
        <div class="field form-group w-full px-3 mb-5">
          <%= f.label :password_confirmation, class:"text-x1 font-semibold" %><br />
          <div class="flex">
          <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">🔐</div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control w-full -ml-10 pl-10 pr-3 py-1 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500", placeholder:"******" %>
          </div>
        </div>
      </div>

      <div class="text-center">
        <%= f.submit "Sign up", class:"w-full py-2 px-4 rounded-lg bg-green-600 text-white hover:bg-green-dark focus:outline-none cursor-pointer" %>
      </div>
      
      <div class="mt-2 text-center">
        <%= link_to "Already signed up?", new_session_path(resource_name), class: "text-gray-400 hover:text-indigo-800
        text-sm font-semibold
        "%>
      </div>
    <% end %>

</div>
