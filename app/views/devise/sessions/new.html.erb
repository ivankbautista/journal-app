<div class="min-h-screen bg-gray-900 flex flex-col justify-center sm:py-6">
	<div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div
			class="absolute inset-0 bg-gradient-to-r from-indigo-300 to-indigo-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
		</div>
    <div class="relative px-4 py-5 bg-white shadow-lg sm:rounded-3xl sm:p-20">
      <div class="max-w-md mx-auto">
				<div class="text-center mb-3">
					<h1 class="text-2xl font-bold mb-1">Task Mate </h1>
          <p>Your partner in your <strong>daily</strong> life.</p>
				</div>
        <% if alert %>
          <p class="alert alert-danger text-center text-red-500 font-bold mb-2 rounded-lg border-2 border-red-500"><%= alert %></p>
        <% end %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="flex">
            <div class="field form-group w-full px-3 mb-5">
              <%= f.label :email, class:"text-x1 font-semibold" %>
              <div class="flex">
                <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-email-outline text-gray-400 text-lg"></i></div>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control w-full -ml-10 pl-10 pr-3 py-1 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500", placeholder:"johndoe@gmail.com" %>
              </div>
            </div>
          </div>
          
          <div class="flex">
            <div class="field form-group w-full px-3 mb-5">
              <%= f.label :password, class:"text-x1 font-semibold" %>
              <div class="flex">
                <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-lock-outline text-gray-400 text-lg"></i></div>
                <%= f.password_field :password, autocomplete: "current-password", class:"form-control w-full -ml-10 pl-10 pr-3 py-1 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500", placeholder:"******" %>
              </div>
            </div>
          </div>
          
          <div class="flex justify-center">
            <% if devise_mapping.rememberable? %>
              <div class="field form-group f">
                <%= f.check_box :remember_me, class:"form-control" %>
                <%= f.label :remember_me %>
              </div>
          </div>
          <% end %>
          
          <div class="flex justify-center mt-5">
            <div class="actions">
              <%= f.submit "Log in", class:"w-full py-2 px-4 rounded-lg bg-indigo-600 text-white hover:bg-green-dark focus:outline-none" %>
            </div>
          </div>

          <div class="flex flex-col justify-center items-center mt-3">
             <div>
              <%= link_to "Haven't signed up?", new_registration_path(resource_name), class: "text-gray-400 hover:text-gray-800
              text-sm font-semibold
              " %>
            </div>
           </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>